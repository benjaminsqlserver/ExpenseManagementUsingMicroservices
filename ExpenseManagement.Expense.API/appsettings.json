{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "ExpenseDb": "Server=localhost;Database=ExpenseManagement_Expense;Trusted_Connection=True;TrustServerCertificate=True"
    },
    "Jwt": {
        "Secret": "YourVerySecureSecretKeyThatIsAtLeast32CharactersLong!",
        "Issuer": "ExpenseManagement.IdentityService",
        "Audience": "ExpenseManagement.Services"
    },
    "Serilog": {
        "MinimumLevel": "Information",
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/expense-service-.txt",
                    "rollingInterval": "Day"
                }
            }
        ]
    }
}